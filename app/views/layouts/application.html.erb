<!DOCTYPE html>
<html>
<head>
  <title>Forage</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

  <link href='http://fonts.googleapis.com/css?family=Lora:400italic' rel='stylesheet' type='text/css'>

<link href='http://fonts.googleapis.com/css?family=Lato:400,300italic|Sintony' rel='stylesheet' type='text/css'>

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container" data-yield="main">
    <div id="header" class="row">
      <div class="span12">
        <i class="forage-trail"><%= image_tag("bg.png") %></i>
      </div>
      <div class="span12">
        <h1 id="logo" class="hide-text"><i id="logo-compass"></i><%= link_to "Forage", places_path %></h1>
        <h2 id="tagline">Never be lost again.</h2>
      </div>

      <div class="span12">
        <nav class="filter-action">
          <ul class="nav nav-pills">
            <%= nav_it_tag("eat it") %>
            <%= nav_it_tag("drink it") %>
            <%= nav_it_tag("do it") %>
          </ul>
        </nav>
      </div>
    </div>

    <%= yield %>
  </div>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-44393123-1', 'shopify.com');
    ga('send', 'pageview');

  </script>
</body>
</html>
